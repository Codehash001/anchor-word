{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "anchorword2",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html" , "height": "tall", "inline": true
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {},
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "anchorword2",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "permissions": {
    "redis": true,
    "reddit": {
      "enable": true,
      "asUser": ["SUBMIT_POST", "SUBMIT_COMMENT"]
    },
    "http": {
      "enable": true,
      "domains": [
        "www.reddit.com",
        "reddit.com",
        "oauth.reddit.com"
      ]
    }
  },
  "dev": {
    "subreddit": "anchorword2_dev"
  }
}